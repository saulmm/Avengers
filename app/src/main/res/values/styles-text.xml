<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Avengers.Text" parent="Avengers">
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Avengers.Text.Header" parent="Avengers.Text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Avengers.Text.ComicHeader" parent="Avengers.Text">
        <item name="android:minHeight">8dp</item>
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Avengers.Text.ComicContent" parent="Avengers.Text">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">75</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Avengers.Text.StateMessage">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>