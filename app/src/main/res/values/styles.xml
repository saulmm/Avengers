<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/brand_primary_dark</item>
        <item name="colorAccent">@color/brand_secondary</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AvengerDetailActivityTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Avengers"/>

    <style name="Avengers.ViewGroup" parent="Avengers">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Avengers.Text" parent="Avengers">
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Avengers.Text.Header" parent="Avengers.Text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Avengers.Text.ComicHeader" parent="Avengers.Text">
        <item name="android:minHeight">8dp</item>
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Avengers.Text.ComicContent" parent="Avengers.Text">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">75</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>
