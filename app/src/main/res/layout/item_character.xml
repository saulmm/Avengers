<?xml version="1.0" encoding="utf-8"?>
<!--suppress Annotator -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/spacing_normal"
    android:paddingRight="@dimen/spacing_normal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >

        <ImageView
            android:id="@+id/item_avenger_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:background="@color/grey.light.hight"
            />

            <TextView
                android:id="@+id/item_avenger_placeholder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/errors.image_not_found"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:visibility="gone"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_small"
            android:paddingRight="@dimen/spacing_small"
            android:paddingTop="@dimen/spacing_small"
            android:paddingBottom="@dimen/spacing_small"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_avenger_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:ellipsize="end"
                android:ems="4"
                android:textColor="@color/grey.dark"
                android:textSize="16sp"
                tools:text="An amazing avenger"
                />
        </LinearLayout>
    </LinearLayout>





</android.support.v7.widget.CardView>